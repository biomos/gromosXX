{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "cuda-on",
            "displayName": "CUDA Enabled",
            "description": "Build with CUDA support",
            "generator": "Ninja",
            "cacheVariables": {
                "USE_CUDA": "ON",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "cuda-off",
            "displayName": "CUDA Disabled",
            "description": "Build without CUDA support",
            "generator": "Ninja",
            "cacheVariables": {
                "USE_CUDA": "OFF",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "cuda-on-debug",
            "displayName": "CUDA Enabled Debug",
            "description": "Debug Build with CUDA support",
            "generator": "Ninja",
            "cacheVariables": {
                "USE_CUDA": "ON",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "cuda-off-debug",
            "displayName": "CUDA Disabled Debug",
            "description": "Debug Build without CUDA support",
            "generator": "Ninja",
            "cacheVariables": {
                "USE_CUDA": "OFF",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-cuda-on",
            "configurePreset": "cuda-on"
        },
        {
            "name": "build-cuda-off",
            "configurePreset": "cuda-off"
        },
        {
            "name": "build-cuda-on-debug",
            "configurePreset": "cuda-on-debug"
        },
        {
            "name": "build-cuda-off-debug",
            "configurePreset": "cuda-off-debug"
        }
    ],
    "testPresets": [
        {
            "name": "test-cuda-on-debug",
            "description": "Minimal tests",
            "displayName": "Minimal tests",
            "configurePreset": "cuda-on-debug"
        }
    ]
}